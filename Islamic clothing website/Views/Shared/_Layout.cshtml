<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Islamic Attires</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Islamic_clothing_website.styles.css" asp-append-version="true" />
    
</head>
<body>
   

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: lightgreen;">
                    <div class="container-fluid">
                           <a class="navbar-brand fw-bold" href="#" style="color: black;">Islamic Attires</a>
                           <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                    
                </button>
                           <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        
                        <li class="nav-item">
                                                    <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index" style="color: black;">Home</a>
                            
                        </li>
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                                    Clothing
                                
                            </a>
                            
                            <ul class="dropdown-menu">
                                
                                <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="ShopMenClothing">Shop Men Clothing</a></li>
                                
                                <li><a class="dropdown-item" aria-currnet="page" asp-controller="Home" asp-action="ShopWomenClothing">Shop Women Clothing</a></li>
                            </ul>
                            
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                                Fragrances

                            </a>

                            <ul class="dropdown-menu">

                                <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="ShopMenFragrances">Shop Men Fragrances</a></li>

                                <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="ShopWomenFragrances">Shop Women Fragrances</a></li>

                        </li>
                    </ul>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: black;">
                            Essentials

                        </a>

                        <ul class="dropdown-menu">

                            <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="PrayerMats">Prayer Mats</a></li>

                            <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="MensCaps">Mens Caps</a></li>

                            <li><a class="dropdown-item" aria-currenr="page" asp-controller="Home" asp-action="WomenHijabs">Women Hijabs</a></li>

                            <li><a class="dropdown-item" aria-current="page" asp-controller="Home" asp-action="OtherItems">Other Items</a></li>

                    </li>
                    </ul>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="About" style="color:black">About</a>

                    </li>
                   
                        
                    
                                                
                                          
                                        

                    
                     
                        
                    
                                   
                    
                </div>
                
            </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Islamic Attires- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
